{
  "name": "svelte-app",
  "version": "1.0.0",
  "devDependencies": {
    "@tsconfig/svelte": "^1.0.10",
    "@types/node": "^14.11.1",
    "cross-env": "7.0.3",
    "css-loader": "5.0.1",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "mini-css-extract-plugin": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "svelte": "^3.31.2",
    "svelte-check": "^1.2.6",
    "svelte-loader": "^3.0.0",
    "svelte-preprocess": "^4.3.0",
    "ts-loader": "^8.0.4",
    "tslib": "^2.0.1",
    "typescript": "^4.0.3",
    "webpack": "5.16.0",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "^3.11.2"
  },
  "scripts": {
    "prepare": "cd ../.. && husky install src/client/.husky",
    "build": "cross-env NODE_ENV=production webpack",
    "svelte-check": "svelte-check --watch",
    "serve": "webpack serve --content-base public",
    "dev": "npm-run-all --parallel svelte-check serve",
    "pretify": "prettier --write ./**/*.svelte .",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@sveltejs/svelte-virtual-list": "^3.0.1",
    "fp-ts": "^2.9.5",
    "io-ts": "^2.2.16",
    "milligram": "^1.4.1",
    "normalize.css": "^8.0.1",
    "svelte-loading-spinners": "^0.1.4"
  },
  "lint-staged": {
    "*.{ts,js,scss,svelte}": [
      "npm run pretify"
    ]
  }
}
